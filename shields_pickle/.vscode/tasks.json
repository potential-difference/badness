{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Processing Sketch",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "${config:processing.path}",
      "presentation": {
        "echo": true,
        "reveal": "always",      // always | never | silent  
        "focus": false,
        "panel": "dedicated"
      },
      "args": [
		    "--force",
		    "--sketch=${workspaceRoot}",
		    "--output=${workspaceRoot}/out",
		    "--run"
	  ],
      "windows": {
        "type": "process",
        "args": [
          "--force",
          {
            "value": "--sketch=${workspaceRoot}",
            "quoting": "strong"
          },
          {
            "value": "--output=${workspaceRoot}\\out",
            "quoting": "strong"
          },
          "--run"
        ]
      }
    }
  ]
}
